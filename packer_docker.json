{
  "variables": {
    "ansible_host": "{{env `PACKAGE`}}-{{env `IMAGE_NAME`}}",
    "ansible_connection": "docker",
    "base_image": "{{env `BASE_IMAGE`}}",
    "build_date": "{{isotime \"20060102\"}}",
    "image_name": "{{env `IMAGE_NAME`}}",
    "package": "{{env `PACKAGE`}}",
    "package_version": "{{env `PACKAGE_VERSION`}}",
    "username": "{{env `DOCKER_USERNAME`}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{user `base_image`}}",
      "commit": "true",
      "exec_user": "root",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": [
        "ENV JAVA_HOME /usr/lib/jvm/default-java",
        "ENV CATALINA_HOME /usr/local/tomcat",
        "ENV PATH $CATALINA_HOME/bin:$PATH",
        "ENV TOMCAT_NATIVE_LIBDIR $CATALINA_HOME/native-jni-lib",
        "ENV LD_LIBRARY_PATH ${LD_LIBRARY_PATH:+$LD_LIBRARY_PATH:}$TOMCAT_NATIVE_LIBDIR",
        "ENV TOMCAT_MAJOR 9",
        "ENV TOMCAT_VERSION {{user `package_version`}}",
        "USER tomcat",
        "CMD [\"catalina.sh\", \"run\"]",
        "WORKDIR $CATALINA_HOME",
        "EXPOSE 8080"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "ansible-galaxy install --force -v --roles-path='./ansible/roles' --role-file='./ansible/requirements.yml'"
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}-{{user `build_date`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}"
      }
    ]
  ]
}
